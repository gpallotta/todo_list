<h1>Welcome</h1>

<% if signed_in? %>
  <%= link_to 'Sign out', signout_path, method: "delete" %>
  <section>
    <%= render 'shared/task_form' %>
  </section>
  <div class="span8">
    <h3>Tasks</h3>
    <%= render 'shared/feed' %>
  </div>

<% else %>
  <%= link_to 'Sign up', signup_path %>
  <%= link_to 'Sign in', signin_path %>
<% end %>
