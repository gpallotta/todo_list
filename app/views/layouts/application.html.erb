<!DOCTYPE html>
<html>
<head>
  <title>TodoList</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= yield :javascript_includes %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <% flash.each do |k, v| %>
      <%= content_tag(:div, v, class: "alert-alert-#{k}") %>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
