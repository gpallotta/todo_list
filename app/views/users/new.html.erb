<div class="row">
  <div class="span6 offset3">
    <%= form_for @user, :html => {:class => "user_form"} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :name, placeholder: 'Name', class: 'user_form_text' %>
      <%= f.text_field :email, placeholder: 'Email', class: 'user_form_text' %>
      <%= f.password_field :password, placeholder: 'Password', class: 'user_form_text' %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', class: 'user_form_text' %>

      <%= f.submit "Create account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
